####### Compile

obj/main.o: main.cpp \
		mainwindow.hpp \
		gamewidget.hpp
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o obj/main.o main.cpp

obj/gamewidget.o: gamewidget.cpp \
		gamewidget.hpp \
		map.hpp
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o obj/gamewidget.o gamewidget.cpp

obj/mainwindow.o: mainwindow.cpp \
		mainwindow.hpp \
		gamewidget.hpp
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o obj/mainwindow.o mainwindow.cpp

obj/moc_gamewidget.o: moc/moc_gamewidget.cpp \
		gamewidget.hpp
	$(CXX) -c $(CXXFLAGS) $(INCPATH) -o obj/moc_gamewidget.o moc/moc_gamewidget.cpp

moc/moc_gamewidget.cpp: gamewidget.hpp
	$(MOC) gamewidget.hpp -o moc/moc_gamewidget.cpp

